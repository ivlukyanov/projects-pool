    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "debug",
            "program": "${workspaceFolder}/bin/www",
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnSessionStart",
            "env": {
                "DEBUG": "pool:*",
                "PORT": "3000",
                "NODE_ENV": "development"
            }
        },
        {
            "type": "node",
            "request": "launch",
            "name": "nodemon",
            "runtimeExecutable": "nodemon",
            "program": "${workspaceFolder}/bin/www",
            // "restart": true,
            "console": "integratedTerminal",
            "internalConsoleOptions": "openOnFirstSessionStart",
            "env": {
                "DEBUG": "pool:*",
                "PORT": "3000",
                "NODE_ENV": "development"
            }
        }
    ]
}